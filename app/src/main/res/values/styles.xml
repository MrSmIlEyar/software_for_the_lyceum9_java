<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="LeftTextViewStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/purple_500</item>
    </style>
    <style name="RightTextViewStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SmallTextViewStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TableRowStyle" parent="Theme.AppCompat.Light">
        <item name="android:padding">10sp</item>
    </style>
</resources>